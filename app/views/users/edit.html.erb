<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>

<div class="edit row clearfix">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, html: { class: "form-horizontal" } do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10"><%= f.text_field :name, id: "inputName", class: "form-control", placeholder: "Name" %></div>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
      <div class="col-sm-10"><%= f.text_field :email, id: "inputEmail", class: "form-control", placeholder: "Email" %></div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
      <div class="col-sm-10"><%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password" %></div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm", class: "col-sm-2 control-label" %>
      <div class="col-sm-10"><%= f.password_field :password_confirmation, id: "inputConfirmation", class: "form-control", placeholder: "Password Confirmation" %></div>
    </div>
    <div class="form-group center">
      <div class="col-sm-offset-2 col-sm-10"><%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      </div>
    </div>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>